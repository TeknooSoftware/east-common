<?xml version="1.0" encoding="UTF-8"?>
<!--infrastructures/doctrine/config/doctrine/Media.mongodb.yml-->
<doctrine-mongo-mapping xmlns="http://xml.teknoo.it/schemas/odm/east-website-mapping"
                        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                        xsi:schemaLocation="http://xml.teknoo.it/schemas/odm/east-website-mapping http://xml.teknoo.it/schemas/odm/east-website-mapping.xml">

    <gridfs-file name="Teknoo\East\Website\Doctrine\Object\Media" bucket-name="media">
        <id field-name="id" type="string" strategy="UUID"/>
        <length field-name="length"/>
        <chunk-size field-name="chunkSize"/>
        <upload-date field-name="uploadDate"/>
        <filename field-name="name" />
        <metadata field-name="metadata" target-document="Teknoo\East\Website\Object\MediaMetadata" />
    </gridfs-file>
</doctrine-mongo-mapping>
