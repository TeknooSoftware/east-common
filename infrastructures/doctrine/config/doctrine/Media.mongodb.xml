<?xml version="1.0" encoding="UTF-8"?>
<!--infrastructures/doctrine/config/doctrine/Media.mongodb.yml-->
<doctrine-mongo-mapping xmlns="http://xml.teknoo.it/schemas/odm/east-website-mapping"
                        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                        xsi:schemaLocation="http://xml.teknoo.it/schemas/odm/east-website-mapping http://xml.teknoo.it/schemas/odm/east-website-mapping.xml">

    <document name="Teknoo\East\Website\Doctrine\Object\Media" collection="media.files">
        <id type="string" strategy="UUID"/>
        <field field-name="name" type="string" />
        <field field-name="mimeType" name="mime_type" type="string" />
        <field field-name="length" type="int" />
        <field field-name="alternative" type="string" />
        <field field-name="createdAt" name="created_at" type="date" />
        <field field-name="updatedAt" name="updated_at" type="date" />
        <field field-name="deletedAt" name="deleted_at" type="date" nullable="true" index="true" />
        <reference-one field="file" target-document="Teknoo\East\Website\Object\StoredFile">
            <cascade>
                <all/>
            </cascade>
        </reference-one>
    </document>
</doctrine-mongo-mapping>
