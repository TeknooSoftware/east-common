<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mongo-mapping xmlns="http://xml.teknoo.it/schemas/odm/east-website-mapping"
                        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                        xsi:schemaLocation="http://xml.teknoo.it/schemas/odm/east-website-mapping http://xml.teknoo.it/schemas/odm/east-website-mapping.xsd">

    <gridfs-file name="Teknoo\East\Website\Doctrine\Object\StoredFile" bucket-name="fs">
        <id field-name="id"/>
        <length field-name="length"/>
        <chunk-size field-name="chunkSize"/>
        <upload-date field-name="uploadDate"/>
        <filename field-name="name" />

        <metadata target-document="Teknoo\East\Website\Doctrine\Object\StoredFileMetadata" />
    </gridfs-file>
</doctrine-mongo-mapping>
