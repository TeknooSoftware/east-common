<?xml version="1.0" encoding="UTF-8"?>
<!--infrastructures/doctrine/config/doctrine/Media.mongodb.yml-->
<doctrine-mongo-mapping xmlns="http://xml.teknoo.it/schemas/odm/east-website-mapping"
                        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                        xsi:schemaLocation="http://xml.teknoo.it/schemas/odm/east-website-mapping http://xml.teknoo.it/schemas/odm/east-website-mapping.xsd">

    <document name="Teknoo\East\Website\Doctrine\Object\Translation" db="documents" collection="translation">
        <id type="string" strategy="UUID"/>
        <field field-name="locale" type="string" />
        <field field-name="objectClass" name="object_class" type="string" />
        <field field-name="field" type="string" />
        <field field-name="foreignKey" name="foreign_key" type="string" />
        <field field-name="content" type="string" />
        <indexes>
            <index name="lookup_unique_idx">
                <key name="locale" order="asc" />
                <key name="object_class" order="asc" />
                <key name="foreign_key" order="asc" />
                <key name="field" order="asc" />
            </index>
            <index name="translations_lookup_idx">
                <key name="locale" order="asc" />
                <key name="object_class" order="asc" />
                <key name="foreign_key" order="asc" />
            </index>
        </indexes>
    </document>
</doctrine-mongo-mapping>
