<?xml version="1.0" encoding="UTF-8"?>
<!--infrastructures/doctrine/config/universal/Content.mongodb.yml-->
<doctrine-mongo-mapping xmlns="http://xml.teknoo.it/schemas/odm/east-website-mapping"
                        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                        xsi:schemaLocation="http://xml.teknoo.it/schemas/odm/east-website-mapping http://xml.teknoo.it/schemas/odm/east-website-mapping.xsd">

    <document name="Teknoo\East\Website\Object\Content" db="documents" collection="contents" inheritance-type="COLLECTION_PER_CLASS">
        <translation class="Teknoo\East\Website\Doctrine\Object\Translation" locale="localeField"/>
        <id type="string" strategy="UUID"/>
        <field field-name="title" type="string">
            <translatable fallback="true"/>
        </field>
        <field field-name="subtitle" type="string">
            <translatable/>
        </field>
        <field field-name="slug" type="string" index="true" unique="true" />
        <field field-name="description" type="string">
            <translatable/>
        </field>
        <field field-name="parts" type="string">
            <translatable/>
        </field>
        <field field-name="tags" type="collection" index="true"/>
        <field field-name="createdAt" name="created_at" type="date" />
        <field field-name="updatedAt" name="updated_at" type="date" />
        <field field-name="deletedAt" name="deleted_at" type="date" nullable="true" index="true" />
        <field field-name="publishedAt" name="published_at" type="date" nullable="true" index="true" />
        <reference-one field="type" target-document="Teknoo\East\Website\Object\Type">
            <cascade>
                <all/>
            </cascade>
        </reference-one>
        <reference-one field="author" target-document="Teknoo\East\Website\Object\User">
            <cascade>
                <all/>
            </cascade>
        </reference-one>
    </document>
</doctrine-mongo-mapping>
