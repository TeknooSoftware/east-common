<?xml version="1.0" encoding="UTF-8"?>
<!--infrastructures/doctrine/config/universal/Item.mongodb.yml-->
<doctrine-mongo-mapping xmlns="http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping"
                        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                        xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping"
                        xsi:schemaLocation="http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping.xsd">

    <document name="Teknoo\East\Website\Object\Item"
              db="documents"
              collection="items"
              inheritance-type="COLLECTION_PER_CLASS">
        <gedmo:translation entity="Gedmo\Translatable\Entity\Translation" locale="localeField"/>
        <id type="string" strategy="UUID"/>
        <field field-name="name" type="string">
            <gedmo:translatable/>
        </field>
        <field field-name="slug" type="string" index="true" unique="true">
            <gedmo:slug unique="true" style="default" updatable="false" separator="-" fields="name" />
        </field>
        <field field-name="location" type="string" index="true"/>
        <field field-name="position" type="int" index="true" order="true"/>
        <field field-name="hidden" type="boolean" index="true"/>
        <field field-name="createdAt" name="created_at" type="date">
            <gedmo:timestampable on="create"/>
        </field>
        <field field-name="updatedAt" name="updated_at" type="date">
            <gedmo:timestampable on="update"/>
        </field>
        <field field-name="deletedAt" name="deleted_at" type="date" nullable="true" index="true" />
        <reference-one
                field="parent"
                target-document="Teknoo\East\Website\Object\Item"
                inversed-by="children">
            <cascade>
                <all/>
            </cascade>
        </reference-one>
        <reference-one
                field="content"
                target-document="Teknoo\East\Website\Object\Content">
            <cascade />
        </reference-one>
        <reference-many field="children"
                        target-document="Teknoo\East\Website\Object\Item"
                        mapped-by="parent">
            <cascade>
                <all/>
            </cascade>
        </reference-many>
    </document>
</doctrine-mongo-mapping>
