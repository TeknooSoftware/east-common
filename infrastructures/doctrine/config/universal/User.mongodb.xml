<?xml version="1.0" encoding="UTF-8"?>
<!--infrastructures/doctrine/config/universal/User.mongodb.xml-->
<doctrine-mongo-mapping xmlns="http://xml.teknoo.it/schemas/odm/east-website-mapping"
                        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                        xsi:schemaLocation="http://xml.teknoo.it/schemas/odm/east-website-mapping http://xml.teknoo.it/schemas/odm/east-website-mapping.xml">

    <document name="Teknoo\East\Website\Object\User" collection="users">
        <id type="string" strategy="UUID"/>
        <field field-name="firstName" name="first_name" type="string" />
        <field field-name="lastName" name="last_name" type="string" />
        <field field-name="roles" name="roles" type="collection" />
        <field field-name="email" type="string" unique="true" index="true" />
        <field field-name="password" type="string" />
        <field field-name="salt" type="string" />
        <field field-name="createdAt" name="created_at" type="date" />
        <field field-name="updatedAt" name="updated_at" type="date" />
        <field field-name="deletedAt" name="deleted_at" type="date" nullable="true" index="true" />
        <indexes>
            <index unique="true">
                <key name="email" order="asc" />
                <option name="safe" value="true" />
            </index>
        </indexes>
    </document>
</doctrine-mongo-mapping>